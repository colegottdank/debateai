{
  "crons": [
    {
      "path": "/api/cron/rotate-topic",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/send-daily-digest",
      "schedule": "0 17 * * *"
    },
    {
      "path": "/api/cron/send-weekly-recap",
      "schedule": "0 18 * * 0"
    },
    {
      "path": "/api/cron/send-winback",
      "schedule": "0 19 * * *"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "debateai.org"
        }
      ],
      "destination": "https://www.debateai.org/:path*",
      "permanent": true
    }
  ]
}
